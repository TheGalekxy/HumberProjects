@model IEnumerable < HTTP5101_Assignment3_n01454046.Models.Class>

@{
    ViewBag.Title = "List";
}

<h2 class="header">Classes</h2>

<p class="listP">
    This page shows a list of all of the Classes offered at the School
</p>

<div id="containerlist">
    @foreach (var Class in Model)
    {
        <div class="listitem row">
            <div class="col-md-12 teacher">
                <a href="/Class/Show/@Class.ClassId" class="teacherInfo">@Class.ClassName @Class.ClassCode</a>
            </div>
        </div>
    }
</div>

<a class="navlink" href="../Home/Index"> Back To Home </a>